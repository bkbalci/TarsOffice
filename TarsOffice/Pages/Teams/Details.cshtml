@page "{id}"
@model TarsOffice.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Team.Name</h1>

<div class="row">
    <div class="col-md-8">
        <h2>Members</h2>
        <a asp-page="AddMember" asp-route-id="@Model.Team.Id">add member</a>
        <ul>
            @foreach (var teamMember in Model.Team.Members)
            {
                <li>
                    <span>@teamMember.User.UserName</span>
                    @if(teamMember.IsAdmin)
                    {
                        <span>(admin)</span>
                    }
                    @if(Model.ImAdmin)
                    {
                        <a asp-page="RemoveMember" asp-route-id="@teamMember.Id" asp-route-teamId="@Model.Team.Id">remove</a>
                    }
                </li>

            }
            </ul>
        </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.Id">Edit</a> |
    <a asp-page="../Index">Back to List</a>
</div>
